 $color-accent: #FF3700;
 $white: #FFFFFF;
 $black: #000000;
 $color-text: #555555;

 $line-global: 20px;
 $gutter-global: $line-global*2;

 $main-font: 'Helvetica-Neue', Arial, sans-serif;

*{
    font-family: $main-font;
    box-sizing: border-box;
}

html,
 body {
     width: 100%;
     margin: 0px;
     padding: 0px;
     line-height: $line-global;
     background-color: $black;
 }

 body {
     background-color: $white;
 }

 h1,h2,h3,h4,h5,h6,p { 
     margin: 0px;
     padding: 0px;
 }

 //utility classes
 .grid{
     display: grid;
     grid-column-gap: $gutter-global;
     grid-row-gap: $gutter-global;
 }

 .main-content{
    min-height: 100vh;
    padding: $gutter-global;
 }

 .two-columns{
    grid-template-columns: 1fr 1fr;
 }

