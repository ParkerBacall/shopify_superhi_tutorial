 $color-accent: #FF3700;
 $white: #FFFFFF;
 $black: #000000;
 $color-text: #555555;
 $color-label: #707070;
 $color-border: #DEDEDE;



 $line-global: 20px;
 $label-font-size: 12px;

 $gutter-global: $line-global*2;

 $main-font: 'Helvetica-Neue', Arial, sans-serif;

$body-font-size: 15px;

$standard-border: 1px solid $color-border;
$black-border: 1px solid $black;

@mixin reset-input {
    appearance: none;
    -webkit-appearance: none;
    -moz-appearance: none;
    -ms-appearance: none;
    cursor: pointer;
    background: transparent;
    border: none;
    border-radius: 0;
    width: auto;
    margin: 0;
    padding: 0;
    line-height: normal;
    -webkit-font-smoothing: inherit;
    -moz-osx-font-smoothing: inherit;
    text-align: left;
  }

*{
    font-family: $main-font;
    box-sizing: border-box;
}

html,
 body {
     width: 100%;
     margin: 0px;
     padding: 0px;
     line-height: $line-global;
     background-color: $black;
 }

 body {
     background-color: $white;
     font-size: $body-font-size;
 }

 h1,h2,h3,h4,h5,h6,p,ul,ol { 
     margin: 0px;
     padding: 0px;
     font-weight: 400;
 }

 //style guide
 .headline-big{
    font-size: 15vw;
    line-height: 1;
}

h2{
    font-size: $body-font-size*2;
    line-height: $line-global*2;
}
h3{
    font-size: $body-font-size;
    line-height: $line-global;
}

p,ul,ol{
    font-size: $body-font-size;
    line-height: $line-global;
    color: $color-text
}

.list-with-stroke{
    list-style-type: none;
}
.list-with-stroke li{
    padding: $line-global 0;
    border-top: $standard-border;
}

.list-with-stroke li:last-child{
    border-bottom: $standard-border;  
}

label{
    font-size: $label-font-size;
    color: $color-label;
}

.styled-select{
    position: relative;
}

.styled-select .select-arrow{
    position: absolute;
    top: 1px;
    right:1px;
    bottom: 1px;;
    width: $line-global*3;
    background: $white;
    text-align: center;
    line-height: $line-global*3;
    border-left: $black-border;
    pointer-events: none;
}

.styled-select .select-arrow img{
    display: inline-block;
    vertical-align: middle;
    width: 16px;
    height: 16px;
}


.styled-select select{
    @include reset-input;
    width: 100%;
    font-size: $body-font-size;
    line-height: $line-global;
    padding: $line-global;
    border: $black-border;
}

button{
    @include reset-input;
    width: 100%;
    font-size: $body-font-size;
    line-height: $line-global;
    padding: $line-global;
    border: $standard-border;
    background-color: $color-accent;
    color: $white;
}
 //utility classes
 .grid{
     display: grid;
     grid-column-gap: $gutter-global;
     grid-row-gap: $gutter-global;
 }

 .main-content{
    min-height: 100vh;
    padding: $gutter-global;
    width: calc(50% + #{ $gutter-global});
    margin-left: auto;
 }

 .two-columns{
    grid-template-columns: 1fr 1fr;
 }

.valign-center{
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.valign-bottom{
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
}

#product-info {
    grid-template-rows: minmax(max-content, auto) minmax(min-content, max-content);
}

.headline{
    padding-bottom: $line-global*3;
}

.sticky-side-image{
    position: fixed;
    width: calc(50% - #{ $gutter-global}/2);
    left: 0;
    top: $gutter-global;
    bottom: $gutter-global;
}

.sticky-side-image img{
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.single-product-image{
    width: 100%;
    height: 100%;
}

span{
    width: 100%;
    height: 100%;
}

.description-content{
    margin-top: $line-global;
}
#add-to-cart-button{
    display: flex;
}

#add-to-cart-button .product-price{

    margin-left: 100px;
}

.form-wrapper{
   padding-top: $line-global*3;
}

#add-to-cart-form{
    margin-top: -($line-global)
}

#product-info-content{
    grid-row-gap: $gutter-global/2
}